PORT=5000
NODE_ENV=development

# AWS DynamoDB Configuration
AWS_REGION=ap-southeast-2
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY

# DynamoDB Table Names
DYNAMODB_SENSOR_DATA_TABLE=SensorData
DYNAMODB_DEVICE_STATUS_TABLE=DeviceStatus
DYNAMODB_NOTIFICATION_LOGS_TABLE=NotificationLogs
DYNAMODB_USERS_TABLE=Users

# AWS IoT Configuration (ถ้าใช้จริง)
AWS_IOT_ENDPOINT=your-iot-endpoint.iot.ap-southeast-1.amazonaws.com
AWS_IOT_CLIENT_ID=iot-backend-client
AWS_IOT_TOPIC=wsn/device

# Weather API
WEATHER_API_KEY=your-openweathermap-api-key

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/iot_sensor_db
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather

# Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
